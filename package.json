{
  "name": "remote-job-list",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "docker": "node_modules/.bin/tsc && docker-compose up --remove-orphans --build --force-recreate",
    "type": "node_modules/.bin/tsc",
    "copy": "mkdir dist/shared/infra/http/certs && cp src/shared/infra/http/certs/standards.ipa.desenv.bb.com.br.key dist/shared/infra/http/certs/ && cp src/shared/infra/http/certs/standards.ipa.desenv.bb.com.br.cer dist/shared/infra/http/certs/",
    "watch": "node_modules/.bin/tsc -w",
    "clean": "rm -rf ./dist/* && echo Clean finished!!!",
    "build": "npm run clean && npm install && npm run type && npm run lint && npm run copy && echo Build finished!!!",
    "build:start": "npm run build && npm run dev:server",
    "develop": "node_modules/.bin/nodemon --legacy-watch --delay 1 --inspect=0.0.0.0:9229 ./dist/shared/infra/http/server.js",
    "lint": "node -r  tsconfig-paths/register node_modules/.bin/eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "start": "node --inspect=9229 -r ts-node/register ./src/shared/infra/http/server.ts",
    "start:watch": "nodemon",
    "serve": "node ./dist/shared/infra/http/server.js",
    "test": "jest",
    "unitTest": "jest --testPathPattern=ut.test\\.ts$",
    "integrationTest": "jest --testPathPattern=it.test\\.ts$ --detectOpenHandles --forceExit",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "dev:server": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.2",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.9.0"
  },
  "dependencies": {
    "apollo-server": "^2.18.2",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.4.0",
    "pg": "^8.4.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.3.0",
    "type-graphql": "^1.1.0",
    "typeorm": "^0.2.28",
    "typescript": "^4.0.5",
    "uuidv4": "^6.2.4"
  }
}
